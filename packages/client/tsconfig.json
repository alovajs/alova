{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "#/*": ["test/*"],
      "root/*": ["../../internal/*"]
    },
    "jsx": "preserve",
    "types": ["solid-js", "react"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "typings/**/*.d.ts",
    "test/**/*.ts",
    "test/**/*.tsx",
    "test/**/*.vue",
    "test/**/*.svelte"
  ]
}
