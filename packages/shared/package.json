  },
  "bugs": {
    "url": "https://github.com/alovajs/alova/issues"
  },
  "exports": {
    "./assert": "./dist/assert.js",
    "./function": "./dist/function.js",
    "./vars": "./dist/vars.js",
    "./types": "./dist/types.js",
    "./event": "./dist/event.js",
    "./createEventManager": "./dist/createEventManager.js",
    "./queueCallback": "./dist/queueCallback.js",
    "./FrameworkState": "./dist/model/FrameworkState.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@alova/scripts": "workspace:*"
