{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "#/*": ["test/*"],
      "root/*": ["../../internal/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "baseUrl": ".",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "types": ["node"],
      "allowSyntheticDefaultImports": true
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
