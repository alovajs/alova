{
  "name": "alova-root",
  "version": "0.0.0",
  "homepage": "https://alova.js.org",
  "private": "true",
  "keywords": [
    "alova",
    "react",
    "vue",
    "svelte",
    "nodejs",
    "deno",
    "bun",
    "hooks",
    "vue-options",
    "next",
    "nuxt",
    "sveltekit",
    "solidjs",
    "preact",
    "angular",
    "qwik",
    "lit",
    "stencil",
    "miniproject",
    "uniapp",
    "taro",
    "typescript",
    "xmlhttprequest",
    "axios",
    "request",
    "graphql",
    "fetch-api",
    "superagent"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts ",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky",
    "commit": "git-cz && git push",
    "coveralls": "pnpm run test:coverage && coveralls < coverage/lcov.info",
    "changeset": "changeset",
    "changeset:alpha": "changeset pre enter alpha",
    "changeset:beta": "changeset pre enter beta",
    "changeset:pre.exit": "changeset pre exit",
    "changeset:version": "changeset version",
    "release": "pnpm run build && pnpm run coveralls && pnpm --filter=@alova/shared fix:reference && changeset publish"
  },
  "author": "Scott Hu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alovajs/alova.git"
  },
  "bugs": {
    "url": "https://github.com/alovajs/alova/issues"
  },
  "lint-staged": {
    "*": "npm run format:fix",
    "*.js,*.ts": "npm run lint:fix"
  },
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=8.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/svelte": "^3.2.2",
    "@testing-library/vue": "^8.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.14",
    "ncp": "^2.0.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "5.0.9",
    "rollup": "^4.14.3",
    "rollup-plugin-dts": "^6.1.1",
    "svelte": "^4.2.19",
    "svelte-jester": "^2.3.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "turbo": "^1.13.2",
    "typescript": "^5.4.5",
    "undici": "^6.16.1",
    "vue": "^3.4.21",
    "vue-demi": "^0.14.7",
    "web-streams-polyfill": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
